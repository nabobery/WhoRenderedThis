{
  "name": "whorenderedthis",
  "displayName": "WhoRenderedThis",
  "version": "0.0.1",
  "description": "React component inspector - hover any UI element to see which component rendered it",
  "author": "Avinash Changrani",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "^0.90.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@plasmohq/storage": "^1.12.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@types/chrome": "^0.0.258",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
  },
  "manifest": {
    "host_permissions": [
      "<all_urls>"
    ],
    "permissions": [
      "storage"
    ],
    "commands": {
      "toggle-inspector": {
        "suggested_key": {
          "default": "Ctrl+Shift+I",
          "mac": "Command+Shift+I"
        },
        "description": "Toggle React UI Inspector"
      }
    }
  }
}
